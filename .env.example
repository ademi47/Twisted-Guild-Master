# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Discord bot token (get this from Discord Developer Portal)
DISCORD_TOKEN=your_discord_token_here

# Required: PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database_name
# Example: postgresql://bot_user:password123@localhost:5432/discord_bot
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Optional: OpenAI API key for AI conversation features (/ask command)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Command prefix for legacy commands (default is !)
BOT_PREFIX=!

# Optional: Set logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: AI usage limits (defaults shown)
DAILY_USER_LIMIT=25
DAILY_SERVER_LIMIT=500
MAX_INPUT_CHARS=4000
MAX_OUTPUT_TOKENS=600
